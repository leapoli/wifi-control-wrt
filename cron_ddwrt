* * * * * morningStart=93000;morningEnd=123000;eveningStart=170000;eveningEnd=203000;probe=$( date | awk '{print $4}' | sed 's/://g' | sed 's/^0*//' );wirelessActivated=$(wl radio);if [ $probe -gt $morningStart ] && [ $probe -lt $morningEnd ] ;then if [ "$wirelessActivated" = "0x0001" ]; then echo "Status: radio disabled. Action: Not in range, enabling.";wl radio on; else echo "Status: radio enabled. Action: In range, nothing to do.";fi; elif [ $probe -gt $eveningStart ] && [ $probe -lt $eveningEnd ] ;then if [ "$wirelessActivated" = "0x0001" ]; then echo "Status: radio disabled. Action: Not in range, enabling.";wl radio on; else echo "Status: radio enabled. Action: In range, nothing to do.";fi; else if [ "$wirelessActivated" = "0x0000" ];then echo "Status: radio enabled. Action: Not in range, disabling.";wl radio off; else echo "Status: radio disabled. Action: In range, nothing to do.";fi;fi